#!/usr/bin/env ruby

require_relative '../config/environment'

input = "" # 1 = human v human 2 = human v comp 3 = comp v comp
puts "Human vs Human, Human vs PC, or PC vs PC?"
puts  "Type 1, 2, or 3 for your respective choice."
input = gets.chomp

until input == "1" || input == "2" || input == "3"
  puts "Human vs Human, Human vs PC, or PC vs PC?"
  puts  "Type 1, 2, or 3 for your respective choice."
  input = gets.chomp
end

case input
  when "1"
game = Game.new
when "2"
  game = Game.new(Players::Human.new("X"), Players::Computer.new("O"))
when "3"
  game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"))
end
